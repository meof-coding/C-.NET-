@using Microsoft.AspNetCore.Identity
@using SignalRAssignment.Areas.Identity.Data

@inject SignInManager<SignalRAssignmentUser> SignInManager
@inject UserManager<SignalRAssignmentUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" method="post">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-white shadow-warning text-warning" id="register" asp-area="Identity" asp-page="/Account/Register"> <i class="fas fa-user me-2"></i>Register</a>
            @*<a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>*@
        </li>
        <li class="nav-item">
            <a class="btn btn-white shadow-warning text-warning" id="login" href="~/Identity/Account/Login/#Login"> <i class="fas fa-user me-2"></i>Login</a>
            @*<a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>*@
        </li>
    }
</ul>
